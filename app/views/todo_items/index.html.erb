<h1><%= @todo_list.title %></h1>

<ul class="todo_items">
  <% @todo_list.todo_items.each do |item| %>
    <li id="<%= dom_id(item) %>">
      <%= item.content %>
      <%= link_to 'Edit', edit_todo_list_todo_item_path(@todo_list, item) %>
      <%= link_to 'Destroy', todo_list_todo_item_path(@todo_list, item), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<p><%= link_to "New Todo Item", new_todo_list_todo_item_path(@todo_list) %></p>
